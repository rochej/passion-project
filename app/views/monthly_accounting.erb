<div class="col-md-8 col-centered">
  <h1 class="text-center">Monthly
    <% month = Date.today.month %>
    <div class="selected-month">
      <small><%=Date::MONTHNAMES[month]%></small>
    </div>
  </h1>

  <div id="monthly">
    <table class="table">
      <tr>
        <th>Roommate</th>
        <th>Points</th>
        <th>Dollars</th>
      </tr>
      <div id="show-one-month">
        <%=erb :_show_one_month, layout: false, locals: {users: @users, month: month} %>
      </div><!--end show-one-month-->
    </table>
</div>

</div>
